{
  "name": "git-activity-logger",
  "version": "1.1.32",
  "description": "A tool to log time spent on Git branches based on activity with interactive configuration setup.",
  "private": true,
  "scripts": {
    "build": "cd client && npm run build",
    "build:background-tracker": "cd background-tracker && npm run build",
    "build:executables": "npm run build:background-tracker && pkg background-tracker/package.json --targets node18-win-x64,node18-macos-x64 --out-path dist/background-tracker-executables",
    "dev": "concurrently \"npm run dev:frontend\" \"npm run dev:backend\"",
    "dev:frontend": "cd client && npm run dev",
    "dev:backend": "cd api && npm run dev",
    "dev:local": "cd api && npm run dev",
    "dev:background-tracker": "nodemon --exec ts-node background-tracker/src/index.ts",
    "typecheck": "npm run typecheck:client && npm run typecheck:api",
    "typecheck:client": "cd client && npm run typecheck",
    "typecheck:api": "cd api && npm run check",
    "lint": "cd client && npm run lint",
    "prepare": "husky"
  },
  "lint-staged": {
    "client/src/**/*.{ts,tsx}": [
      "eslint --fix"
    ],
    "api/**/*.ts": [
      "echo 'Skipping individual file typecheck for API'"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kacan98/track-current-task.git"
  },
  "keywords": [
    "git",
    "activity",
    "log",
    "time tracking",
    "task management"
  ],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/kacan98/track-current-task/issues"
  },
  "homepage": "https://github.com/kacan98/track-current-task#readme",
  "ts-node": {
    "esm": true,
    "experimentalSpecifierResolution": "node",
    "require": [
      "tsconfig-paths/register"
    ]
  },
  "dependencies": {
    "@types/cookie-parser": "^1.4.9",
    "@types/inquirer": "^9.0.8",
    "chalk": "^4.1.2",
    "cookie-parser": "^1.4.7",
    "dotenv": "^17.2.1",
    "inquirer": "^12.6.3",
    "typescript": "^5.3.3",
    "zod": "^4.1.5"
  },
  "devDependencies": {
    "@eslint/js": "^9.34.0",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/node": "^24.1.0",
    "@vercel/node": "^5.3.20",
    "axios": "^1.11.0",
    "concurrently": "^9.2.0",
    "cors": "^2.8.5",
    "esbuild": "^0.25.5",
    "eslint": "^9.34.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "express": "^5.1.0",
    "globals": "^16.3.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.5",
    "nodemon": "^3.1.10",
    "pkg": "^5.8.1",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "tsx": "^4.20.5",
    "typescript-eslint": "^8.41.0",
    "vercel": "^46.1.1"
  }
}
